<Page
    x:Class="Catfish.GlobalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catfish"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <AppBar x:ConnectionId='1' x:Name="menu"                                              
                Background="#00B5F1" BorderThickness="0" BorderBrush="#00B5F1">
            <Grid HorizontalAlignment="Right" Width="1346">
                <!--左侧： 主页、新消息、个人页面按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Image Height="60" Source="Images/Logo.jpg"/>
                    <Button x:ConnectionId='6' x:Name="Home_Button" Style="{StaticResource HomeAppBarButtonStyle}"                    />
                    <Button x:ConnectionId='7' x:Name="Message_Button" Style="{StaticResource MessageAppBarButtonStyle}"                       />
                    <Button x:ConnectionId='8' x:Name="Explore_Button" Style="{StaticResource PeopleAppBarButtonStyle}"                       />
                    <Button x:ConnectionId='9' x:Name="Me_Button" Style="{StaticResource ContactPresenceAppBarButtonStyle}"                 />
                </StackPanel>
                <!--右侧： 拍照、搜索和退出按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:ConnectionId='2' x:Name="Camera_Button" Style="{StaticResource PhotoAppBarButtonStyle}"                     >
                        <!--<button.flyout>
                            <menuflyout opened="flyout_opened">
                                <menuflyoutitem text="摄像头"/>
                                <menuflyoutitem text="本地图片"/>
                            </menuflyout>
                        </button.flyout>-->
                    </Button>
                    
                    <Button x:ConnectionId='3' x:Name="Static_Button" Style="{StaticResource PhotoAppBarButtonStyle}"                           />
                    <Button x:ConnectionId='4' x:Name="Search_Button" Style="{StaticResource SearchAppBarButtonStyle}"                         />
                    <Button x:ConnectionId='5' x:Name="Return_Button" Style="{StaticResource ClosePaneAppBarButtonStyle}"                       />
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.TopAppBar>

    <Grid>
        <Frame x:Name="rootFrame" />
    </Grid>

</Page>

